   "source": [
    "def han(n, x, y, z):\n",
    "    '''圓環 小~大 1~n'''\n",
    "    if n == 1:\n",
    "        print(x,'->',z)\n",
    "    else :\n",
    "        han(n-1, x, z, y) # n-1的塔 x 移動到 y\n",
    "        print(x,'->',z) #第 n x 移動到 z\n",
    "        han(n-1, y, x, z) # n-1的塔 y 移動到 z"
   ]
  },
